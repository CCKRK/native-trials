<Page loaded="loaded">
	<Page.actionBar>
    <ActionBar title="Sign up"></ActionBar>
	</Page.actionBar>
    <StackLayout>
        <Image src="res://logo" horizontalAlignment="center"/>
        <TextField id = "email" text="{{ email }}" id="email" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField id = "password" text="{{ password }}" secure="true" hint="Password" />
        <Button text="Sign Up" tap="register" />
    </StackLayout>
</Page>
